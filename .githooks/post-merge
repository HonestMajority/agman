#!/usr/bin/env bash
set -euo pipefail

# Only run release on merges to master
BRANCH="$(git rev-parse --abbrev-ref HEAD)"
if [[ "$BRANCH" != "master" ]]; then
    exit 0
fi

REPO_ROOT="$(git rev-parse --show-toplevel)"
echo "Merge to master detected â€” running release script..."
"$REPO_ROOT/release.sh"
